<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/itName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Case for Trump"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#919191"
        android:maxWidth="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itNumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxWidth="200dp"
        android:maxLines="1"
        android:text="x2"
        android:textColor="#919191"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/itPrice"
        app:layout_constraintStart_toEndOf="@+id/itName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="160.000Ä‘"
        android:textColor="#434343"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>