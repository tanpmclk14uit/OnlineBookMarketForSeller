<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue_dark</item>
    </style>
    <!-- Style to turn off action bar in activity -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="tv_28_bold" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tv_28_medium" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="tv_24_bold" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="tv_24_regular_disable" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/disable</item>

    </style>

    <style name="tv_14_regular" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tv_14_blue" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue_dark</item>
    </style>

    <style name="tv_14_regular_disable" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#919191</item>
    </style>

    <style name="tv_14_regular_underline" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tv_12_regular" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="tv_12_regular_blue" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blue_dark</item>
    </style>

    <style name="tv_12_regular_light" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#342F2F</item>
    </style>
    <style name="tv_14_regular_white" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="btn_blue" parent="android:Widget.TextView">
        <item name="elevation">10dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="ButtonStlye123" parent="android:style/Widget.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="rating_bar" parent="@style/Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">#FFCC00</item>
    </style>


    <style name="myTextInputLabel" parent="TextAppearance.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@android:color/tertiary_text_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/holo_orange_light</item>
    </style>
    <style name="customRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small"/>
    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="AppTheme.NoActionBar." parent="Theme.AppCompat.Light.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/trans</item>
    </style>
</resources>